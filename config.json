{
	"source": ["tokens/**/*.tokens.json"],
	"platforms": {
		"css": {
			"transformGroup": "css",
			"prefix": "cs",
			"buildPath": "dist/css/",
			"files": [
				{
					"destination": "_variables.css",
					"format": "css/variables"
				}
			]
		},
		"scss": {
			"transformGroup": "css",
			"prefix": "cs",
			"buildPath": "dist/scss/",
			"files": [
				{
					"destination": "_variables.scss",
					"format": "scss/variables"
				}
			]
		},
		"js": {
			"transformGroup": "js",
			"buildPath": "dist/js/",
			"files": [
				{
					"destination": "variables.js",
					"format": "javascript/es6"
				}
			]
		}
	}
}
